<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/left_layout_dinling"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:background="@drawable/icon_chat_left"
        android:gravity="left"
        android:orientation="vertical">


        <TextView
            android:id="@+id/left_msg_dinling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="dinling"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout_dinling"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="right"
        android:background="@drawable/iocn_chat_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/right_msg_dinling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="dinling"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>